# Production Environment Variables Template
# Copy this file to /home/ec2-user/.env.production on your EC2 instance
# Then fill in the actual values

# Database Configuration
export DATASOURCE_URL="jdbc:mysql://your-rds-endpoint:3306/your_database"
export DATASOURCE_USERNAME="your_db_user"
export DATASOURCE_PASSWORD="your_db_password"

# JWT Configuration
export JWT_SECRET="your-secure-jwt-secret-key-here"
export JWT_EXPIRATION="86400000"

# Server Configuration
export SERVER_PORT="8090"
export FRONTEND_URL="https://your-frontend-domain.com"

# Gemini API
export GEMINI_API_KEY="your-gemini-api-key"

# Email Configuration
export MAIL_MAILER="smtp"
export MAIL_HOST="smtp.gmail.com"
export MAIL_PORT="587"
export MAIL_USERNAME="your-email@gmail.com"
export MAIL_PASSWORD="your-app-password"
export MAIL_ENCRYPTION="tls"
export MAIL_FROM_ADDRESS="your-email@gmail.com"
export MAIL_FROM_NAME="AutoCare"
